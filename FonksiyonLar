def square (number):# iÃ§ iÃ§e Fonksiyon kullanÄ±m Ã¶rnerÄŸi...
    return number**2
def sum_and_square (x,y):
    sum_result = x+y
    return square(sum_result)

result = sum_and_square(7,5)
print(result)

Basit Bir Hesap MAkinesi UygulamasÄ±

def hesap_makinesi(sayi1, sayi2, islem):
    try:
        if islem == "+":
            return sayi1 + sayi2
        elif islem == "-":
            return sayi1 - sayi2
        elif islem == "*":
            return sayi1 * sayi2
        elif islem == "/":
            return sayi1 / sayi2
        else:
            print("GeÃ§erli bir iÅŸlem seÃ§iniz.")
            return None
    except ZeroDivisionError:
        print("Hata: Bir sayÄ±yÄ± 0'a bÃ¶lemezsiniz.")
        return None

print("=== HESAP MAKÄ°NESÄ°NE HOÅ GELDÄ°NÄ°Z ===")
print("Ä°ÅŸlemler: +  -  *  /")
print("Ã‡Ä±kmak iÃ§in 'q' tuÅŸlayÄ±nÄ±z.\n")

while True:
    islem = input("Bir iÅŸlem seÃ§iniz (+ - * /) veya Ã§Ä±kmak iÃ§in 'q' : ")
    
    if islem.lower() == "q":
        print("Ã‡Ä±kÄ±ÅŸ yapÄ±lÄ±yor...")
        break

    if islem not in "+-*/":
        print("GeÃ§ersiz iÅŸlem seÃ§tiniz. LÃ¼tfen tekrar deneyin.")
        continue

    try:
        sayi1 = int(input("1. SayÄ±yÄ± giriniz: "))
        sayi2 = int(input("2. SayÄ±yÄ± giriniz: "))
    except ValueError:
        print("LÃ¼tfen sadece sayÄ± giriniz.\n")
        continue

    sonuc = hesap_makinesi(sayi1, sayi2, islem)
    if sonuc is not None:
        print(f"SonuÃ§: {sayi1} {islem} {sayi2} = {sonuc}\n")
