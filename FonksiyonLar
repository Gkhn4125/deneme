import time

def zaman_olc(func):
    def wrapper(*args, **kwargs):
        basla = time.time()
        sonuc = func(*args, **kwargs)
        bitir = time.time()
        print(f"Ã‡alÄ±ÅŸma sÃ¼resi: {bitir - basla:.4f} saniye")
        return sonuc
    return wrapper

@zaman_olc
def bekle():
    time.sleep(2)

bekle()
#------------------------------------------------------------------
def tekrar_dene(func):
    def wrapper(*args, **kwargs):
        for _ in range(3):
            try:
                return func(*args, **kwargs)
            except Exception as e:
                print(f"Hata oluÅŸtu: {e}, tekrar deneniyor...")
    return wrapper

@tekrar_dene
def hata_veren_fonksiyon():
    raise ValueError("Bir ÅŸeyler ters gitti!")

hata_veren_fonksiyon()


