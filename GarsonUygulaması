import datetime

et_menu = (
    ("Et DÃ¶ner", 100),
    ("Et Izgara", 150),
    ("Et Fajita", 200),
    ("Et HaÅŸlama", 300)
)

tavuk_menu = (
    ("Tavuk DÃ¶ner", 100),
    ("Tavuk Izgara", 150),
    ("Tavuk Fajita", 200),
    ("Tavuk Kanat", 300)
)

icecek_menu = (
    ("Kola", 25),
    ("KÃ¼Ã§Ã¼k Boy Ayran", 10),
    ("BÃ¼yÃ¼k Boy Ayran", 15),
    ("Fanta", 27),
    ("Åalgam", 20)
)

siparisler = []
toplam_tutar = 0
masa_no = input("ğŸª‘ Masa numarasÄ± giriniz: ")

def menu_goster(menu):
    for urun in menu:
        print(f"{urun[0]} - {urun[1]} TL")

def siparis_al(menu):
    global toplam_tutar
    secim = input("LÃ¼tfen Ã¼rÃ¼n adÄ±nÄ± yazÄ±nÄ±z: ").title().strip()
    for urun in menu:
        if secim == urun[0]:
            try:
                adet = float(input("KaÃ§ porsiyon/alÄ±m istersiniz? "))
                if adet <= 0:
                    print("âš ï¸ GeÃ§erli bir miktar giriniz.")
                    return
                fiyat = adet * urun[1]
                siparisler.append((urun[0], adet, fiyat))
                toplam_tutar += fiyat
                print(f"âœ… SipariÅŸ eklendi: {urun[0]} x{adet} = {fiyat:.2f} TL")
                return
            except ValueError:
                print("âš ï¸ SayÄ± girmelisiniz.")
                return
    print("âŒ GeÃ§ersiz Ã¼rÃ¼n seÃ§imi.")

def siparis_sil():
    global toplam_tutar
    print("ğŸ—‘ï¸ SipariÅŸ Ä°ptali")
    silinecek = input("Silmek istediÄŸiniz Ã¼rÃ¼nÃ¼n adÄ±nÄ± yazÄ±nÄ±z: ").title().strip()
    for s in siparisler:
        if s[0] == silinecek:
            siparisler.remove(s)
            toplam_tutar -= s[2]
            print(f"âŒ {s[0]} silindi. Yeni toplam: {toplam_tutar:.2f} TL")
            return
    print("ğŸ” SipariÅŸ bulunamadÄ±.")

def hesap_yazdir():
    print("\nğŸ§¾ SÄ°PARÄ°Å FÄ°ÅÄ°")
    now = datetime.datetime.now()
    print(f"Tarih: {now.strftime('%Y-%m-%d %H:%M:%S')}")
    print(f"Masa No: {masa_no}")
    print("-" * 30)
    for s in siparisler:
        print(f"{s[0]} x{s[1]} = {s[2]:.2f} TL")
    print("-" * 30)
    print(f"Toplam Tutar: {toplam_tutar:.2f} TL\n")

    # Dosyaya yaz
    with open(f"masa_{masa_no}_fiÅŸ.txt", "w", encoding="utf-8") as f:
        f.write(f"Garson V3.0 SipariÅŸ FiÅŸi\n")
        f.write(f"Tarih: {now.strftime('%Y-%m-%d %H:%M:%S')}\n")
        f.write(f"Masa No: {masa_no}\n")
        f.write("-" * 30 + "\n")
        for s in siparisler:
            f.write(f"{s[0]} x{s[1]} = {s[2]:.2f} TL\n")
        f.write("-" * 30 + "\n")
        f.write(f"Toplam Tutar: {toplam_tutar:.2f} TL\n")

    print(f"ğŸ’¾ SipariÅŸler 'masa_{masa_no}_fiÅŸ.txt' dosyasÄ±na kaydedildi.")

# Ana MenÃ¼ DÃ¶ngÃ¼sÃ¼
while True:
    print("\nMenÃ¼ler: [et / tavuk / iÃ§ecek / hesap / sil / Ã§Ä±kÄ±ÅŸ]")
    secim = input("MenÃ¼ seÃ§iniz: ").lower().strip()

    if secim == "et":
        print("\nğŸ¥© ET MENÃœSÃœ:")
        menu_goster(et_menu)
        siparis_al(et_menu)

    elif secim == "tavuk":
        print("\nğŸ— TAVUK MENÃœSÃœ:")
        menu_goster(tavuk_menu)
        siparis_al(tavuk_menu)

    elif secim == "iÃ§ecek":
        print("\nğŸ¥¤ Ä°Ã‡ECEK MENÃœSÃœ:")
        menu_goster(icecek_menu)
        siparis_al(icecek_menu)

    elif secim == "hesap":
        hesap_yazdir()

    elif secim == "sil":
        siparis_sil()

    elif secim == "Ã§Ä±kÄ±ÅŸ":
        print("ğŸ‘‹ Ã‡Ä±kÄ±ÅŸ yapÄ±lÄ±yor. Afiyet olsun!")
        break

    else:
        print("âš ï¸ GeÃ§erli bir menÃ¼ seÃ§iniz.")
